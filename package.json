	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Sumanai/bitrix-snippet.git"
	},
	"contributes": {
		"snippets": [
			{
				"language": "php",
				"path": "./snippets/application.json"
			},
			{
				"language": "php",
