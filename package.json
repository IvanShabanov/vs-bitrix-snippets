			},
			{
				"language": "php",
				"path": "./snippets/cgroup.json"
			},
			{
				"language": "php",
				"path": "./snippets/ciblock.json"
			},
			{
				"language": "php",
				"path": "./snippets/ciblockelement.json"
			},
			{
				"language": "php",
				"path": "./snippets/ciblockproperty.json"
			},
			{
				"language": "php",
				"path": "./snippets/ciblocksection.json"
			},
			{
				"language": "php",
				"path": "./snippets/cmodule.json"
			},
			{
				"language": "php",
				"path": "./snippets/csite.json"
			},
			{
				"language": "php",
				"path": "./snippets/cuser.json"
			},
			{
				"language": "php",
				"path": "./snippets/cutil.json"
			},
			{
				"language": "php",
				"path": "./snippets/d7asset.json"
			},
			{
				"language": "php",
				"path": "./snippets/d7autload.json"
			},
			{
				"language": "php",
				"path": "./snippets/d7config.json"
			},
			{
				"language": "php",
				"path": "./snippets/d7debug.json"
			},
			{
				"language": "php",
				"path": "./snippets/d7element.json"
			},
			{
				"language": "php",
				"path": "./snippets/d7group.json"
			},
			{
				"language": "php",
				"path": "./snippets/d7lang.json"
			},
			{
				"language": "php",
				"path": "./snippets/d7loader.json"
			},
			{
				"language": "php",
				"path": "./snippets/d7option.json"
			},
			{
				"language": "php",
				"path": "./snippets/d7section.json"
			},
			{
				"language": "php",
				"path": "./snippets/d7user.json"
			},
			{
				"language": "php",
				"path": "./snippets/other.json"
			}
		],
		"keybindings": [
			{
				"command": "editor.action.insertSnippet",
				"key": "alt+s",
				"mac": "alt+s",
				"when": "editorHasSelection"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Bitrix snippets configuration",
			"properties": {
				"bitrix-snippet.hint-function": {
					"type": "boolean",
					"default": false,
					"description": "Подключать в рабочую область каталог с файлами-заглушками, содержащими описания стандартных функций."
				}
			}
		}
	},
	"main": "./extension.js",
	"activationEvents": [
		"onLanguage:php"
	]
}
