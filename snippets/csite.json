{
    "CSite.Add": {
        "prefix": "csiteadd",
        "body": [
            "\\$dctFields = [",
            "\t\t'LID'              => 'ru',",
            "\t\t'ACTIVE'           => 'Y',",
            "\t\t'DEF'              => 'N',",
            "\t\t'NAME'             => '${1:sitename}',",
            "\t\t'DIR'              => '${2:sitedir}',",
            "\t\t'FORMAT_DATE'      => 'DD.MM.YYYY',",
            "\t\t'FORMAT_DATETIME'  => 'DD.MM.YYYY HH:MI:SS',",
            "\t\t'CHARSET'          => '${3:sitecharset}',",
            "\t\t'EMAIL'            => '${4:siteemail}',",
            "\t\t'LANGUAGE_ID'      => '${5:sitelang}',",
            "\t\t'DOC_ROOT'         => ''",
            "\t];",
            "\\$rsSite = new \\\\CSite;",
            "\\$rsSite->Add(\\$dctFields);",
            "if (strlen(\\$rsSite->LAST_ERROR)>0) \\$strError .= \\$rsSite->LAST_ERROR;"
        ],
        "description": "Добавляет новый сайт."
    },
    "CSite.Delete": {
        "prefix": "csitedelete",
        "body": [
            "if(CSite::Delete('${1:siteLID}') === false){",
            "\techo 'Can't Delete site...';",
            "}"
        ],
        "description": "Удаляет сайт."
    },
    "CSite.GetByID": {
        "prefix": "csitegetbyid",
        "body": [
            "\\$arSite = \\\\CSite::GetByID('${1:siteLID}')->fetch();",
            "if(is_array(\\$arSite)) {",
            "\tvar_export(\\$arSite);",
            "}"
        ],
        "description": "Получает данные об одном сайте."
    },
    "Csite.Update": {
        "prefix": "csiteupdate",
        "body": [
            "\\$dctFields = [",
            "\t\t'EMAIL' => '${1:siteemail}',",
            "\t\t'NAME'  => '${2:sitename}',",
            "\t\t//...",
            "\t];",
            "\\$rsSite = new \\\\CSite;",
            "\\$rsSite->Update('${3:siteLID}', \\$dctFields);",
            "if (strlen(\\$rsSite->LAST_ERROR)>0) \\$strError .= \\$rsSite->LAST_ERROR;"
        ],
        "description": "Изменяет существующий сайт."
    }
}
