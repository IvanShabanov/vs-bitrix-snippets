{
    "D7Autload": {
        "prefix": "d7autoload",
        "body": [
            "\\\\Bitrix\\\\Main\\\\Loader::registerAutoLoadClasses(",
            "\t'',",
            "array(",
            "\t\t'${1:classname}' => '${2:pathclass}',",
            "\t\t//...",
            "\t)",
            ");"
        ],
        "description": "Метод регистрирует классы для автозагрузки."
    }
}
