            "CModule::IncludeModule('${1:moduleName}');"
        ],
        "description": "Проверяет установлен ли модуль и если установлен, то подключает его."
    },
    "CModule.AddAutoloadClasses": {
        "prefix": ["cmoduleaddautoload","autoload"],
        "body": [
            "CModule::AddAutoloadClasses(",
            "\t'',",
            "\tarray(",
            "\t\t'${1:classname}' => '${2:pathclass}',",
            "\t\t//...",
            ")",
            ");"
        ],
        "description": ""
    }
}
